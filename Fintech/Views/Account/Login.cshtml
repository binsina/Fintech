        <div class="error-btn">
            @Html.ActionLink("Guest Log-in", "GuestLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl, type = "guest" }, new { @class = "btn btn-primary" })<i class="fa fa-user" aria-hidden="true"></i>
