

@{
    ViewBag.Title = "Invite";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Invite", "HouseHolds", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<h4>Invite a new Member</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">

        @Html.Label("Email")
        <div class="col-md-10">
            @Html.TextBox("Email")
        </div>
    </div>




    



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Invite Member" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


